{
  "manifest_version": 3,
  "name": "Claude Usage Monitor",
  "version": "1.0",
  "description": "Monitor Claude.ai usage limits via dynamic icon badge",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://claude.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Claude Usage Monitor"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
